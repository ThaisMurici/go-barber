{% extends "_layouts/default.njk" %}

{% block body %}
  <div class="content">
    <strong>Hello,
      {{ user.name }}</strong>
    <p>Start the scheduling by choosing a barber below:
    </p>
    <ul class="providers">
      {% for provider in providers %}
        <li class="provider">
          <div>
            <img src="/files/{{ provider.avatar }}"/>
            <strong>{{ provider.name }}</strong>
          </div>
          <a href="/app/appointments/new/{{ provider.id }}">+</a>
        </li>
      {% endfor %}
    </ul>

    <a href="/app/signout" class="logout">Sign out</a>
  </div>
{% endblock %}
